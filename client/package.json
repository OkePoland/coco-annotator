{
  "name": "multi-annotator",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "lerna": "^3.20.2",
    "rimraf": "^3.0.2"
  },
  "scripts": {
    "bootstrap": "lerna bootstrap",
    "start": "lerna run prestart --stream && lerna run start --parallel",
    "build": "lerna run build --stream",
    "clear": "lerna clean -y && yarn clearBuild",
    "clearBuild": "rimraf packages/*/dist && rimraf packages/*/build"
  }
}
